             xmlns:local="clr-namespace:PizzaDelivery"
             Startup="ApplicationStart">
    <Application.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Utilities/DataTemplate.xaml" />
