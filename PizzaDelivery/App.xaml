                <ResourceDictionary Source="View/Resourses/Styles/Image.xaml" />
                <ResourceDictionary Source="View/Resourses/Styles/ScrollViewer.xaml" />
                <ResourceDictionary Source="View/Resourses/Styles/DataGrid.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </Application.Resources>
</Application>
